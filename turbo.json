{
	"$schema": "https://turborepo.org/schema.json",
	"pipeline": {
		"build": {
			"outputs": ["dist/**"],
			"dependsOn": ["^build"]
		},
		"dev": {
			"cache": false
		},
		"typecheck": {
			"cache": false,
			"dependsOn": ["^typecheck"]
		},
		"clean": {
			"cache": false,
			"dependsOn": ["^clean"]
		},
		"build:docs": {
			"dependsOn": ["^build:docs"]
		}
	},
	"globalDependencies": ["tsconfig.json"]
}
