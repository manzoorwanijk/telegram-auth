{
	"name": "@telgram/auth",
	"private": true,
	"scripts": {
		"build": "turbo run build",
		"build:packages": "turbo run build --filter=./packages/*",
		"clean": "turbo run clean",
		"deploy": "turbo run deploy",
		"dev": "turbo run dev --parallel",
		"lint": "turbo run lint",
		"postinstall": "pnpm build:packages",
		"typecheck": "turbo run typecheck"
	},
	"devDependencies": {
		"@telgram-auth/eslint-config": "workspace:*",
		"@telgram-auth/tsconfig": "workspace:*",
		"eslint": "^8.30.0",
		"prettier": "^2.8.1",
		"rimraf": "^3.0.2",
		"turbo": "^1.6.3",
		"typescript": "^4.9.4"
	},
	"workspaces": [
		"examples/*",
		"internal/*",
		"packages/*"
	]
}
